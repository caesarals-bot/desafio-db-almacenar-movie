<h1>Edit Documentary</h1>

<% if @documentryfilm.errors.any? %>
    <h2>The following errors prevented the movie from being saved</h2>
    <ul>
        <% @documentryfilm.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @documentryfilm, local: true) do |f|%>
    <p>
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :synopsis %><br/>
        <%= f.text_area :synopsis %>
    </p>

    <p>
        <%= f.label :director %><br/>
        <%= f.text_field :director %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
<p>
    <%= link_to 'Create new documentary', documentry_films_path%>
</p>
<p>
    <%= link_to 'Return to documentary films listing', documentry_films_path%>
</p>